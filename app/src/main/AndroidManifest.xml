<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pornattapat.dper">

    <uses-permission android:name="android.permission.INTERNET "></uses-permission>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@drawable/ic_dper"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".SelectModeActivity"></activity>
        <activity android:name=".WrittingLevelActivity"></activity>
        <activity android:name=".DirectMessageActivity"></activity>
        <activity android:name=".LibraryActivity"></activity>
        <activity android:name=".Exam.StartExam"></activity>
        <activity android:name=".Exam.PlayExamActivity"></activity>
        <activity android:name=".Exam.EndExam"></activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".ClubActivity"></activity>
    </application>

</manifest>